<% provide(:title, t("base.home")) %>
<% provide(:base_title, t("base.title"))%>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%=  render "shared/user_info" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form"%>
      </section>
    </aside>
    <div class="col-md-8">
    <%= raw t "static_pages.home.h3" %>
    <%= render "shared/feed" %>
  </div>
<% end%>
<div class="center jumbotron">
  <h1><%= t("static_pages.home.sampleapp") %></h1>
  <h2>
    <%= t("static_pages.home.thisissampleapp") %>
    <%= link_to t("static_pages.home.rbor"), "http://www.railstutorial.org/" %>
    <%=  t(".sample_application") %>
  </h2>
  <%= link_to t("static_pages.home.signup"), signup_path,
    class: "btn btn-lg btn-primary" %>
</div>
